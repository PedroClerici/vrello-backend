{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "newLine": "lf",
    "typeRoots": ["./src/@types"],
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
